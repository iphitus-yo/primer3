<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TruckCheck" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/green_success</item>
        <item name="colorSecondaryVariant">@color/green_success</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/blue_dark</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.TruckCheck">
        <item name="android:windowBackground">@color/blue_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/blue_primary</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text input styles -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="hintTextColor">@color/blue_primary</item>
    </style>
</resources>